= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { class: ""}) do |f|
  .container-fluid
    %section.container
      .container-page
        .col-md-6
          %h3.dark-grey Registration
          .form-group.col-lg-6
            %label First Name
            = f.input :first_name, label: false, input_html: { class: 'form-control', placeholder: "First Name" }
          .form-group.col-lg-6
            %label Last Name
            = f.input :last_name, label: false, input_html: { class: 'form-control', placeholder: "Last Name" }
          .form-group.col-lg-6
            %label Email
            = f.input :email, label: false, input_html: { class: 'form-control', placeholder: "Email" }
          .form-group.col-lg-6
            %label Phone
            = f.input :phone, label: false, input_html: { class: 'form-control', placeholder: "Phone" }
          .form-group.col-lg-6
            %label Password
            = f.input :password, label: false, input_html: { class: 'form-control', placeholder: "password" }
          .form-group.col-lg-6
            %label Repeat Password
            = f.input :password_confirmation, label: false, input_html: { class: 'form-control', placeholder: "Repeat Password" }
        .col-md-6
          -#%h3.dark-grey Terms and Conditions
          -#%p
            By clicking on "Register" you agree to hootin's' Terms and Conditions
          %p
          = f.button :submit, "Register", :class => 'btn btn-primary '
          = link_to 'Allready a Member', new_user_session_path, :class => 'btn btn-link '
